<html>
    <head>
        <title>
            Loan Repayment Calculator
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, , maximum-scale=1, user-scalable=no">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
        <!-- <link rel="stylesheet", href="/static/style.css" type="text/css"> -->
        <style>
            .container-fluid {
                display: flex;
                justify-content: center;
                padding: 2%;
            }
            .form-control {
                margin-bottom: 6px;
            }

            .content {
                width: 42%;
            }

            .form-group .form-control  {
                    border: 2px solid #D6E2FF;
                    margin-bottom: 8px;
                }

            .form-group .form-control:focus  {
                    border: 2px solid #5C8EFF;
                }   

            .form-group .submit-button {
                    background-color: white; 
                    color: rgba(0, 255, 25, 0.6); ; 
                    border: 2px solid  rgba(0, 255, 25, 0.6);
                    width: 70%;
                    text-align: center;
                }

            .form-group .submit-button:hover {
                    background-color : rgba(0, 255, 25, 0.6);
                    color: white;
                    margin: auto;
                }

            form label {
                font-weight: 500;
            }

@media screen and (max-width: 425px) {
            .content {
                width: 90%;
            }
    }
        </style>
    </head>
    <body style="font-family: Roboto, sans-serif">
        <%- include('partials/header') -%><br>
        <div class="text-center" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"><h2>Apply here we will reach out you </h2></div>
        <div class="container-fluid" style="padding: 5%">
            <div class="row content" >

                <div class="col well"  style="background: #EBF1FF; border-width: 0px; border-radius: 16px;">
                    <form action="/apply-loan" method="POST" class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" placeholder="First Name" name="fname" required>
                        <label>Last Name</label>
                        <input type="text" class="form-control" placeholder="Last Name" name="lname">
                        <label>Email ID</label>
                        <input type="email" class="form-control" placeholder="Email ID" name="email" required>
                        <label>Phone No</label>
                        <input type="number" class="form-control" placeholder="Phone Number" name="pno" required>
                        <label>Applying Country : &nbsp;</label>
                            <select class="form-control" name="countries" required>
                                <option value="USA"> USA </option>
                                <option value="CANADA"> CANADA </option>
                                <option value="UK"> UK </option>
                            </select>                            
                        <label>Select Bank (optional) : </label>
                            <select class="form-control" name="banks" required>
                                <option value="Select Bank"> Select Bank </option>
                                <% for(var i=0;i<=data.length-1;i++) { %>
                                    <option value="<%= data[i].bank_name %>"> <%= data[i].bank_name %> </option>
                                <% } %>
                            </select>
                        <div style="text-align: center; padding-top: 12px">
                            <input type="submit"  class="btn form_font submit-button" value="Submit">
                        </div>
                        <% if(bol === true) { %>
                            <div class="text-center" style="margin-top: 16px">
                                <p class="alert-success" style="color: white; padding: 8px; font-size: 18px; background-color: rgba(0, 255, 25, 0.6); border-radius: 6px">Thanks for applying our consultant will reach you shortly</p>
                            </div>
                        <% } %>
                    </form>
                </div>

            </div>
        </div>
        <%- include('partials/footer') %>
    </body>
</html>