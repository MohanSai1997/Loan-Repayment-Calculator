<html>
    <head>
        <title>
            Loan Repayment Calculator
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, , maximum-scale=1, user-scalable=no">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
        <!-- <link rel="stylesheet", href="/static/style.css" type="text/css"> -->
        <style>
            .container-fluid {
                display: flex;
                justify-content: center;
                padding: 2%;
            }
            .form-control {
                margin-bottom: 6px;
            }
        </style>
    </head>
    <body>
        <%- include('partials/header') -%><br>
        <div class="text-center" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"><h2>Apply here we will reach out you </h2></div>
        <div class="container-fluid" style="padding: 5%">
            <div class="row">
                <div class="col well apply">
                    <form action="/apply-loan" method="POST" class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" placeholder="First Name" name="fname" required>
                        <label>Last Name</label>
                        <input type="text" class="form-control" placeholder="Last Name" name="lname">
                        <label>Email ID</label>
                        <input type="email" class="form-control" placeholder="Email ID" name="email" required>
                        <label>Phone No</label>
                        <input type="number" class="form-control" placeholder="Phone Number" name="pno" required><br>
                        <label>Applying Country : &nbsp;</label><select name="countries" required>
                            <option value="USA"> USA </option>
                            <option value="CANADA"> CANADA </option>
                            <option value="UK"> UK </option>
                        </select><br><br>
                        <label>Select Bank (optional) : </label><select name="banks" required>
                            <option value="Select Bank"> Select Bank </option>
                            <% for(var i=0;i<=data.length-1;i++) { %>
                                <option value="<%= data[i].bank_name %>"> <%= data[i].bank_name %> </option>
                            <% } %>
                        </select><br>
                        <br><input type="submit" class="btn btn-success" value="Submit"><br>
                        <% if(bol === true) { %>
                            <br><div class="text-center">
                                <h3 class="alert-success">Thanks for applying our consultant will reach you shortly</h3>
                            </div>
                        <% } %>
                    </form>

                </div>
        </div>
        </div>
        <%- include('partials/footer') %>
    </body>
</html>